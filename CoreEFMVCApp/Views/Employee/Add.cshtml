@model EmployeeViewModel
@{
    ViewData["Title"] = "Add employee";
}

<div class="p-4 container">
    <div class="row p-4">
        <div class="col-md-12">
           <h3>Add Employee</h3>
        </div>
    </div>
    <div class="row p-4">
        <div class="col-md-6">
            <form asp-controller="Employee" asp-action="Add" method="post">
                <div class="mb-3">
                    <label for="FirstName" class="form-label fw-bold"> FirstName</label>
                    <input asp-for="FirstName" class="form-control" type="text" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label for="LastName" class="form-label fw-bold"> LastName</label>
                    <input asp-for="LastName" class="form-control" type="text" />
                    <span asp-validation-for="LastName" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label for="datetimepicker" class="form-label fw-bold"> Date of Birth</label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label for="Gender" class="form-label fw-bold"> Gender</label>
                    <div class="d-flex">
                        <div class="form-check px-4">
                            <input asp-for="Gender" class="form-check-input"  type="radio" name="Gender" value="male" />
                            <label class="form-check-label fw-bold" for="Gender">Male</label>
                        </div>
                        <div class="form-check px-4">
                            <input asp-for="Gender" class="form-check-input" type="radio" name="Gender" value="female" checked />
                            <label class="form-check-label fw-bold" for="Gender">Female</label>
                        </div>
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label for="phonenumber" class="form-label fw-bold"> Phone number</label>
                    <input asp-for="PhoneNumber" class="form-control" type="number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label for="Address" class="form-label fw-bold"> Address</label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold"> Choose Department</label>
                    <select asp-for="DepartmentId" asp-items="ViewBag.Departments">
                        <option value="">Select department</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked id="isActive" />
                    <label class="form-label fw-bold"> Is Active</label>
                    <span asp-validation-for="IsActive" class="text-danger"></span>

                </div>
                <button class="btn btn-dark" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>
